---
// Selected Work Section Component
---

<section class="selected-work-section section section--dark">
  <div class="section-container">
    <div class="section-header section-header--left">
      <div class="selected-work-header">
        <div class="selected-work-header__content">
          <h2 class="section-heading">Selected works</h2>
          <p class="section-posttitle">See our featured works here</p>
        </div>
        <a href="/selected-works" class="btn btn--outline">View All</a>
      </div>
    </div>
    
    <div class="selected-work-grid">
      <!-- Row 1 -->
      <div class="selected-work-row">
        <!-- XoolTech -->
        <article class="work-item">
          <div class="work-item__image">
            <a href="/work-single" class="work-item__image-link">
              <img src="/images/XoolTech.jpg" alt="XoolTech Project" />
              <div class="work-item__image-overlay">
                <span class="work-item__view-text">View</span>
              </div>
            </a>
          </div>
          <div class="work-item__content">
            <div class="work-item__header">
              <h3 class="work-item__title">XoolTech</h3>
              <div class="tag-group">
                <span class="tag tag--primary">Brand Identity</span>
                <span class="tag tag--primary">Web Design</span>
              </div>
            </div>
            <p class="work-item__description">
              We partnered with Rainfall's amazing team to create a website that tells their unique story and reflects on their values.
            </p>
          </div>
        </article>

        <!-- Flinkerk -->
        <article class="work-item">
          <div class="work-item__image">
            <img src="/images/Flinkerk.jpg" alt="Flinkerk Project" />
          </div>
          <div class="work-item__content">
            <div class="work-item__header">
              <h3 class="work-item__title">Flinkerk</h3>
              <div class="tag-group">
                <span class="tag tag--primary">Web Design</span>
              </div>
            </div>
            <p class="work-item__description">
              Flinkwerk helps streamline your projects to develop and deploy software for the web in a fully automated and highly configurable...
            </p>
          </div>
        </article>
      </div>

      <!-- Row 2 -->
      <div class="selected-work-row">
        <!-- Alberto Maya -->
        <article class="work-item">
          <div class="work-item__image">
            <img src="/images/Alberto-Maya.jpg" alt="Alberto Maya Project" />
          </div>
          <div class="work-item__content">
            <div class="work-item__header">
              <h3 class="work-item__title">Alberto Maya</h3>
              <div class="tag-group">
                <span class="tag tag--primary">Design</span>
                <span class="tag tag--primary">Web Development</span>
              </div>
            </div>
            <p class="work-item__description">
              Flinkwerk helps streamline your projects to develop and deploy software for the web in a fully automated and highly configurable...
            </p>
          </div>
        </article>

        <!-- Flickerd -->
        <article class="work-item">
          <div class="work-item__image">
            <img src="/images/Flickerd.jpg" alt="Flickerd Project" />
