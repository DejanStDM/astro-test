<footer class="footer">
  <!-- Contact Hero Section -->
  <section class="footer__hero">
    <div class="section-container">
      <h2 class="footer__hero-title">
        Have an idea? <span class="footer__hero-title--underlined">Let's Talk</span>
      </h2>
    </div>
  </section>

  <!-- Main Footer Section -->
  <section class="footer__main">
    <div class="section-container">
      <div class="footer__content">
        <!-- Contact Information -->
        <div class="footer__contact">
          <div class="footer__contact-section">
            <h3 class="footer__contact-label">Get in touch</h3>
            <a href="mailto:info@template.com" class="footer__contact-email">info@template.com</a>
          </div>
          
          <div class="footer__contact-section">
            <h4 class="footer__contact-title">Phone</h4>
            <div class="footer__contact-details">
              <a href="tel:+0001112223333">+000 111 222 3333</a>
              <a href="tel:+4445556667777">+444 555 666 7777</a>
            </div>
          </div>
          
          <div class="footer__contact-section">
            <h4 class="footer__contact-title">Address</h4>
            <div class="footer__contact-details">
              <address>
                2352 Middlefield Rd, Markham<br>
                Ontario, Canada
              </address>
            </div>
          </div>
        </div>

        <!-- Pages Navigation -->
        <div class="footer__nav">
          <h4 class="footer__nav-title">Pages</h4>
          <nav class="footer__nav-list">
            <a href="/" class="footer__nav-link">Home</a>
            <a href="/services" class="footer__nav-link">Service</a>
            <a href="/case-study" class="footer__nav-link">Case Study</a>
            <a href="/about-us" class="footer__nav-link">About Us</a>
            <a href="/blog-main" class="footer__nav-link">Blog</a>
            <a href="/contact-us" class="footer__nav-link">Contact</a>
          </nav>
        </div>

        <!-- Admin Links -->
        <div class="footer__nav">
          <h4 class="footer__nav-title">Admin</h4>
          <nav class="footer__nav-list">
            <a href="/404" class="footer__nav-link">404</a>
            <a href="/login" class="footer__nav-link">Login</a>
            <a href="/licenses" class="footer__nav-link">Licenses</a>
            <a href="/instructions" class="footer__nav-link">Instructions</a>
            <a href="/styleguide" class="footer__nav-link">Styleguide</a>
            <a href="/changelog" class="footer__nav-link">Changelog</a>
            <a href="/more-templates" class="footer__nav-link">More Templates</a>
          </nav>
        </div>

        <!-- Social & Newsletter -->
        <div class="footer__social">
          <div class="footer__social-section">
            <h4 class="footer__social-title">Reach Out to Us</h4>
            
            <div class="footer__social-icons">
              <div class="footer__social-row">
                <a href="#" class="footer__social-link" aria-label="Facebook">
                  <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#" class="footer__social-link" aria-label="Twitter">
                  <i class="fab fa-twitter"></i>
                </a>
                <a href="#" class="footer__social-link" aria-label="Instagram">
                  <i class="fab fa-instagram"></i>
                </a>
              </div>
              <div class="footer__social-row">
                <a href="#" class="footer__social-link" aria-label="Skype">
                  <i class="fab fa-skype"></i>
                </a>
                <a href="#" class="footer__social-link" aria-label="WhatsApp">
                  <i class="fab fa-whatsapp"></i>
                </a>
                <a href="#" class="footer__social-link" aria-label="LinkedIn">
                  <i class="fab fa-linkedin-in"></i>
                </a>
              </div>
            </div>
          </div>

          <div class="footer__newsletter">
            <p class="footer__newsletter-text">
              Join our mailing list and get to know exciting stuff at first hand
            </p>
            <form class="footer__newsletter-form">
              <div class="footer__newsletter-input-group">
                <input 
                  type="email" 
                  class="footer__newsletter-input" 
                  placeholder="johnchoe@gmail.com"
                  required
                >
                <button type="submit" class="footer__newsletter-button" aria-label="Subscribe to newsletter">
                  <img src="/icons/Newsletter.svg" alt="Send" width="24" height="24">
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer Bottom -->
  <section class="footer__bottom">
    <div class="section-container">
      <div class="footer__bottom-content">
        <div class="footer__bottom-left">
          <p class="footer__bottom-text">Made it with love by Hexwaave. Powered by Webflow.</p>
        </div>
        <div class="footer__bottom-right">
          <a href="/privacy-policy" class="footer__bottom-link">Privacy Policy</a>
          <a href="/sitemap" class="footer__bottom-link">Sitemap</a>
        </div>
      </div>
    </div>
  </section>
</footer>
