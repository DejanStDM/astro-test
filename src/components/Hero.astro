---
// Hero.astro: Hero section component
---

<section class="hero">
  <div class="hero__background">
    <div class="hero__background-image"></div>
    <div class="hero__background-gradient"></div>
  </div>
  
  <div class="hero__container">
    <div class="hero__content">
      <h1 class="hero__title">
        We Build High-Converting Websites 
        <span class="hero__title-highlight">That Deliver Results</span>
      </h1>
      
      <div class="hero__actions">
        <button class="btn btn-primary hero__btn">
          Book a Call
        </button>
        <button class="btn btn-secondary hero__btn">
          See our Works
        </button>
      </div>
    </div>
  </div>
</section>
