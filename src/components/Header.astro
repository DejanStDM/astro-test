<header class="header">
  <div class="section-container">
    <div class="header__content">
      <!-- Logo -->
      <div class="header__logo">
        <a href="/" class="header__logo-link">
          <img src="/images/Logo-white.png" alt="Nitro" class="header__logo-image">
        </a>
      </div>

      <!-- Hamburger Menu Button -->
      <button class="header__hamburger" data-menu-toggle aria-label="Toggle navigation menu" aria-expanded="false">
        <span class="header__hamburger-line"></span>
        <span class="header__hamburger-line"></span>
      </button>
    </div>
  </div>

  <!-- Full Screen Navigation Overlay -->
  <nav class="header__nav" data-nav-menu>
    <div class="header__nav-content">
      <div class="header__nav-header">
        <div class="header__nav-logo">
          <img src="/images/Logo-white.png" alt="Nitro" class="header__nav-logo-image">
        </div>
        <button class="header__nav-close" data-menu-close aria-label="Close navigation menu">
          <span class="header__nav-close-line"></span>
          <span class="header__nav-close-line"></span>
        </button>
      </div>

      <div class="header__nav-main">
        <ul class="header__nav-list">
          <li class="header__nav-item">
            <a href="/" class="header__nav-link">Home</a>
          </li>
          <li class="header__nav-item">
            <a href="/about-us" class="header__nav-link">About Us</a>
          </li>
          <li class="header__nav-item">
            <a href="/service" class="header__nav-link">Services</a>
          </li>
          <li class="header__nav-item">
            <a href="/selected-works" class="header__nav-link">Selected Works</a>
          </li>
          <li class="header__nav-item">
            <a href="/work-single" class="header__nav-link">Work Single</a>
          </li>
          <li class="header__nav-item">
            <a href="/blog-main" class="header__nav-link">Blog</a>
          </li>
          <li class="header__nav-item">
            <a href="/blog-single" class="header__nav-link">Blog Single</a>
          </li>
          <li class="header__nav-item">
            <a href="/contact-us" class="header__nav-link">Contact Us</a>
          </li>
          <li class="header__nav-item">
            <a href="/privacy-policy" class="header__nav-link">Privacy Policy</a>
          </li>
        </ul>

        <div class="header__nav-footer">
          <div class="header__nav-contact">
            <p class="header__nav-contact-label">Get in touch</p>
            <a href="mailto:info@template.com" class="header__nav-contact-email">info@template.com</a>
          </div>
          
          <div class="header__nav-social">
            <a href="#" class="header__nav-social-link" aria-label="Facebook">
              <i class="fab fa-facebook-f"></i>
            </a>
            <a href="#" class="header__nav-social-link" aria-label="Twitter">
              <i class="fab fa-twitter"></i>
            </a>
            <a href="#" class="header__nav-social-link" aria-label="Instagram">
              <i class="fab fa-instagram"></i>
            </a>
            <a href="#" class="header__nav-social-link" aria-label="LinkedIn">
              <i class="fab fa-linkedin-in"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-- Overlay Background -->
  <div class="header__overlay" data-nav-overlay></div>
</header>
